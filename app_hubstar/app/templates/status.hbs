


<div class="gradient1" style="color:#555;">







    <div style="padding: 20px;text-align: center;" data-step="5" data-intro="Here is your <b>status</b>. Next will jump to your <b>User Profile</b>" data-position='right'>


        {{#unless HubStar.isLogin}}

        <div id='welcome_message' style='margin-bottom: 25px; '>
            <h2  style="">Welcome!!</h2>
            <p>Please login to create your ideas space.</p>
            <div id="cta_register" style="margin: 15px 0 0;" class="registerbtn" {{action ctaregister on="click"  target="view"}}>Register</div>
            <div id="cta_login" class="loginbtn" {{action ctalogin on="click"  target="view"}}>Login</div>
        </div>
        {{else}} 


        <div id="afterLogin">
            <div class="profilepic-container" style="margin:0 0 10px;">
                <a {{bindAttr href="controller.myUserProfile"}} ><img {{bindAttr src="controller.user.photo_url_large"}} class="profilepic_user" style="box-shadow: 0 1px 2px #555;"/></a>                              
            </div>
            <p> Hi <b>{{controller.user.display_name}}</b> </p>
            <h4>{{controller.response}}</h4>

        </div>



        {{/unless}}
    </div>







</div>

