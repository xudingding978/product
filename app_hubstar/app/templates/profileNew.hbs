<div class="profilegb" style="background: #fff url('../images/texture.png') repeat;width: 100%;height: auto;">
    <div style="width: 100%; height: 1000px; overflow: hidden; position: fixed;"> 
        <img src="../../../images/landingpagebg.jpg" style="width: 100%; height:100%; ">
    </div>

    <div style="position: relative; height: 400px; top: 200px; width: 715px; margin: auto;">

        <img src="http://s3.hubsrv.com/trendsideas.com/profiles/trends-media-sales-marketing-services/profile_picture/Screen%20Shot%202013-09-05%20at%209_286x284.51" style="width: 150px; height:auto;border: 3px solid white;box-shadow: 0px 0px 15px #555; float: left;">

        <div style="float: left;color: white; text-shadow: 0px 0px 15px #000;font-size: 40px;line-height: 50px;letter-spacing: 1px;margin: 24px 0 0 30px;">
            <p><b>SIGN UP NOW</b></p> 
            <p><b>TO TRENDS IDEAS SPACE</b></p>        
        </div>
    </div>

    <div class="profilewrapper" style="z-index: 5; position: relative; width: 980px;  margin: auto;background: white; box-shadow: 0px 0px 13px; border-radius: 3px; bottom: 10px;">

        <div class="profilecorpbanner" style=" height: 400px; border-radius: 3px 3px 0 0; position: relative; overflow: hidden;">       
            <img src="../images/defaultcover/defaultcover4.jpg" style="width: 100%;"/>
            <div class="corpbanner_mask" style="background: url('../images/bannershadow.png') repeat-x; position: absolute;bottom:0; width: 100%; height: 200px;"></div>
        </div>


        <div style="padding: 10px; font-weight: bold; background-color: rgb(241, 238, 238);"> Step 1. Package</div>
        <div class="contactme-table easing" style="width: 87%;margin: auto;padding-bottom: 160px; " >

            <div class="profilenew-package" {{action packageSelection "gold"}}>GOLD</div>
            <div class="profilenew-package" {{action packageSelection "silver"}}>SILVER</div>
            <div class="profilenew-package" {{action packageSelection "bronze"}}>BRONZE</div>

        </div>
        <div style="padding: 10px; font-weight: bold; background-color: rgb(241, 238, 238);">Step 2. Client Detail</div>
        <div class="contactme-table easing" style="width: 87%;margin: auto;padding-bottom: 50px;">

            <table style="padding: 0 20px; width: 100%;font-size: 14px;  display: table;border-collapse: separate;border-spacing: 4px;margin: 40px 0 30px;">
                <tbody class="profilesnew-table" style="display: table-row-group; vertical-align: middle; border-color: inherit;">
                    <tr>
                        <th></th>
                    </tr>

                    <tr>
                        <td>Client Name*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   id="clientNameField" class=""   style="margin: 0;width: 80%;">
                                    {{view Ember.TextField valueBinding="client_name" class="clientName"  placeholder="John Key" }}
                                </div>
                            </div>
                            <div class="mustfull" id="clientName" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Client Email*:</td>

                        <td> 
                            <div style="display: block;">
                                <div   id="clientEmailField"  style="margin: 0;width: 80%;">
                                    {{view Ember.TextField valueBinding="owner" class="clientEmail"  placeholder="John_Key@gg.com"}}
                                </div>
                            </div>   
                            <div class="mustfull" id="clientEmailFormat" style="display: none">not correct email format.....</div>
                            <div class="mustfull" id="clientEmail" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div style="padding: 10px; font-weight: bold; background-color: rgb(241, 238, 238);">Step 3. Business Profile</div>
        <div class="contactme-table easing" style="width: 87%;margin: auto;padding-bottom: 50px;">

            <table style="padding: 0 20px; width: 100%;font-size: 14px;  display: table;border-collapse: separate;border-spacing: 4px;margin: 40px 0 30px;">
                <tbody class="profilesnew-table" style="display: table-row-group; vertical-align: middle; border-color: inherit;">

                    <tr>
                        <th></th>
                    </tr>

                    <tr>
                        <td>Profile Name*: </td>                     
                        <td> 
                            <div  id="profileNameField" style="display: block;">
                                {{view Ember.TextField valueBinding="profile_name"   class="profileName" placeholder="Heritage Tiles NZ"}} 
                            </div>
                            <div class="mustfull" id="profileName" style="display: none">please fill in info... </div>
                        </td>
                    </tr>


                    <tr>
                        <td>Profile Category:</td> 

                        <td>
                            <div class="new-btn" style="display: block;" {{action dropdown "category"}}>
                                 <span id="categorySelection">{{controller.categorySelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.categoryDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                            <div class="mustfull" id="categoryCheck" style="display: none">please Select a Category </div>
                        </td>

                        <td>
                            <div class="new-btn" style="display:inline-block; width:100%;" {{action dropdown "subcategory"}}>
                                 <span id="subcategorySelection">{{controller.subcategorySelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.subcategoryDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                            <div class="mustfull" id="subcategoryCheck" style="display: none">please Select a Subcategory </div>
                        </td>


                    </tr>



                    <tr>
                        <td>Physical Address:</td>                      
                        <td>
                            <div class="new-btn" style="display: block;" {{action dropdown "country"}}>
                                 <span id="countrySelection">{{controller.countrySelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.countryDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                            <div class="mustfull" id="countryCheck" style="display: none">please Select a Country </div>

                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <div class="new-btn" style="display: block;" {{action dropdown "region"}}>
                                 <span id="regionSelection">{{controller.regionSelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.regionDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                            <div class="mustfull" id="regionCheck" style="display: none">please Select a Region </div>
                        </td>

                    </tr>

                    <tr>
                        <td></td>
                        <td> 

                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="suburb"  placeholder="Suburb"}}
                                </div>
                            </div>

                        </td>

                    </tr>


                    <tr>
                        <td></td>
                        <td> 

                            <div   style="margin: 0;width: 100%;">
                                {{view Ember.TextField valueBinding="address"  placeholder="Street Address"}}
                            </div>


                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Contact Name:</td>
                        <td> 
                            <div  style="display: block; margin-bottom: 5px;" >

                                <div  style="margin: 0 5px 0;width: 48%;display: inline-block;">
                                    {{view Ember.TextField valueBinding="first_name"  placeholder="First Name"}}
                                </div>
                                <div style="margin: 0;width: 48%;display: inline-block;">
                                    {{view Ember.TextField valueBinding="last_name"  placeholder="Last Name"}}
                                </div>

                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Contact Number:</td>
                        <td> 

                            <div  style="display: block; margin-bottom: 5px; " >
                                <div class="new-btn" style="margin: 0 5px 0; display: inline-block; width: 15%" {{action dropdown "number"}}>
                                     <span id="numberSelection">{{controller.numberSelection}}</span>
                                    <span class="caret"></span>
                                </div>
                                {{#if controller.numberDropdown}}
                                {{view HubStar.DropdownListView}}
                                {{/if}}
                                <div   style="margin: 0; display:  inline-block;width: 70%;">
                                    {{view Ember.TextField valueBinding="profile_contact_number" placeholder="0987364531"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Contact Email*:</td>

                        <td> 
                            <div style="display: block;">
                                <div   id="contactEmailField" style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="direct_enquiry_emails"  class="contactEmail"  placeholder="superman@hubstar.com"}}
                                </div>
                            </div>     
                            <div class="mustfull" id="contactEmailFormat" style="display: none">not correct email format.....</div>
                            <div class="mustfull" id="contactEmail" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Website Name:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="website" placeholder="yourdomain.com"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Website URL:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="website_url" placeholder="http://www.yourdomain.com"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Profile URL*:</td>
                        <td> 
                            <div style="display: block;">
                                {{controller.profile_name}}-{{controller.regionSelection}}-{{ controller.countrySelection}}
                            </div>
                           
                        </td> 
                    </tr>

                    <tr>
                        <td>Admins*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   id="adminsField" style="margin: 0;width: 100%; height: 100px;">
                                    {{view Ember.TextArea valueBinding="editors"   class="admins no-resize" placeholder="Ironman@hubstar.com, CaptainAmerica@hubstar.com, hulk@hubstar.com"}}
                                </div>
                            </div>                   
                            <div class="mustfill" id="adminsEmailFormat" style="display: none">not correct email format.....</div>
                            <div class="mustfull" id="admins" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                    <tr><td style="font-weight: bold;">Image Upload</td></tr>
                    <tr>
                        <td>Background:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_bg_url"  class="background"  placeholder="http://yourBackgroundImage" }}
                                </div>
                            </div>
                        </td>
                        <td>
                            <img style="width:50px" {{bindAttr src="profile_bg_url"}} />

                        </td>
                    </tr>

                    <tr>
                        <td>Hero:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_hero_url"  class="hero"  placeholder="http://yourHeroImage" }}
                                </div>
                            </div>
                        </td>
                        {{#if heroImage}}
                        <td>
                            <img style="width:50px" {{bindAttr src="profile_hero_url"}} />
                        </td>
                        {{else}}
                        <td>
                            <div>button</div>
                        </td>
                        {{/if}}
                    </tr>


                    <tr>
                        <td>Picture:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_pic_url"  class="picture"  placeholder="http://yourPictureImage" }}
                                </div>
                            </div>
                        </td>
                        <td>
                            <img style="width:50px" {{bindAttr src="profile_pic_url"}} />

                        </td>
                    </tr>

                    <tr>
                        <td>Request Keywords: {{controller.keywordNumber}}</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%; height:100px;">
                                    {{view Ember.TextArea valueBinding="keywords" class="no-resize"  placeholder="* Please ensure you use a commer seperated list!!! ie: bathroom, kitchen, living room"}}
                                </div>
                            </div>
                        </td>
                    </tr>


                </tbody>
            </table>

            <div  style="display: block; margin:15px auto; float: none; right: 0; bottom: 0;text-align: center;">
                <a class="new-btn green-btn" href="#" {{action save }} style="width: 100px;">Create Profile</a>
            </div>

        </div>




    </div>



</div>












