
{{#if controller.feedback}}
<div id='appfeedback' style=''>

    {{#if controller.info}}

    <div  class="fresh-profile-pic"style="">
        <img src="../../../images/trendsideas.jpg"/>
        <img {{bindAttr src= this.photo_url}}/>
    </div>
    <div class="fresh-message">
        <k class="fa fa-info-sign"></k>
        <span class="feed-back">{{controller.status}}</span>
        <k class="fa fa-remove" {{action removeButton }}></k>
    </div>

    {{/if}}



    {{#if controller.succeed}}


    <div class="fresh-profile-pic" style="">
        <img src="../../../images/trendsideas.jpg"/>
        <img {{bindAttr src= this.photo_url}}/>
    </div>
    <div class="fresh-message fresh_succeed">
        <k class="fa fa-check-circle"></k>
        <span class="feed-back">{{controller.status}}</span>
        <k class="fa fa-remove" {{action removeButton }}></k>
    </div>

    {{/if}}

    {{#if controller.failed}}

    <div class="fresh-profile-pic" style="">
        <img src="../../../images/trendsideas.jpg"/>
        <img {{bindAttr src= this.photo_url}}/>
    </div>
    <div class="fresh-message fresh_failed">
        <k class="fa fa-times-circle"></k>
        <span class="feed-back">{{controller.status}}</span>
        <k class="fa fa-remove" {{action removeButton }}></k>
    </div>

    {{/if}}


    {{#if controller.warnning}}

    <div class="fresh-profile-pic" style="">
        <img src="../../../images/trendsideas.jpg"/>
        <img {{bindAttr src= this.photo_url}}/>
    </div>
    <div class="fresh-message fresh_warnning">
        <k class="fa fa-exclamation-sign"></k>
        <span class="feed-back">{{controller.status}}</span>
        <k class="fa fa-remove" {{action removeButton }}></k>
    </div>

    {{/if}}
</div>
{{/if}}
