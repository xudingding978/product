

<div class="popup-container">
<div id="login_lightbox" class="popup-bg-fadeout" {{action canel}}>&nbsp;</div>
<div class="t-style-box" style="z-index: 100;background-color: #fff;position: absolute;width: 600px;padding: 10px; border-radius: 5px;">
    {{#view HubStar.SingleFileUploaderView}}
    <div style="position: relative;height: 380px;width: 600px;border: 2px dashed #ccc;z-index: 100;"> 
        <div style="top: 50px;position: relative;margin: auto;width: 80%;font-size: 26px; text-shadow: 1px 1px 0px #fff, -0.5px -0.5px 0px #555;color: #aaa;text-align: center;font-size: 35px;">
            <i class="icon-upload" style="font-size: 45px;"></i>
            <p style="font-weight: bold;">
                Drag and drop.
            </p>
        </div> 
        <div class="new-btn blue-btn" style="" {{action closeUploader}}>
             close  
    </div> 
    <div class="new-btn blue-btn" style="margin: auto; width: 200px; top: 200px; position: absolute;left: 80px;right: 67%;">
        Choose 
        <div style="opacity:0;position: absolute;top: 0px;left: 0;width: 85px;overflow: hidden;"> {{view HubStar.ImageInputButtonView }}</div> 
    </div> 

    <div id="dragAndDroppArea" class="dragndropbox" style="display:none">


    </div>
</div>
{{/view}}

{{#if pdfInfromationEdit}}
<div id="pdfInformation">
    {{#each pdfArray}}
    <div>
        <span class="new-btn green-btn" {{action modifyDetail pdf_title}}>{{pdf_title}}</span> 
    </div>
    <div {{bindAttr id="pdf_title"}} style="display: none">
        <div>
            <img alt="" {{bindAttr src="pdf_cover_image"}}>
        </div>
        <div>
            <span class="new-btn green-btn" {{action changeCover pdf_title}}>Change Cover</span>
        </div>
        <div>
            {{view Ember.TextField valueBinding="pdf_title"  placeholder="file name"}}
        </div>
        <div>
            {{view Ember.TextField valueBinding="pdf_desc"  placeholder="file description"}}
        </div>
    </div>
    {{/each}}
    <div class="controlbtn" style="left: 34%;">
        <span class="new-btn green-btn" {{action submit}}>Upload</span> 
    </div>
</div>
{{/if}}

</div>
</div>