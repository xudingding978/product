<div class="profilegb" style="background: #fff url('../images/texture.png') repeat;width: 100%;height: auto;">
    <div style="width: 100%; height: 1000px; overflow: hidden; position: fixed;"> 
        <img src="../images/defaultbg/defaultbg6.jpg" style="width: 100%; height:100%;">
    </div>

    <div style="position: relative; height: 400px; padding: 150px 0; width: 650px; text-align: center; margin: auto;">
        <span style="color: white; text-shadow: 0px 0px 15px #000;font-size: 35px;line-height: 35px; position: relative;display: block;margin-bottom: 20px;">
            — <b>Welcome for joining Trendsideas!</b> —
        </span>
        <span style="color: white; text-shadow: 0px 0px 15px #000;font-size: 16px; ">Please scroll down and fill in the information in order to create a profile!</span>
    </div>




    <div class="aside-profilepic" style="bottom: 120px;position: relative; margin: auto;z-index: 6;">
        <img src="../images/defaultpic/defaultpic1.jpg" style="width: 200px; height:auto; display: block;margin: 10px auto; border:3px solid white;width: 200px; height:auto; display: block;margin: 20px auto; border:5px solid white;box-shadow: 0px 0px 15px #555;"> 
    </div>

    <div class="profilewrapper" style="z-index: 5; position: relative; width: 980px;  margin: auto;background: white; box-shadow: 0px 0px 13px; border-radius: 3px; bottom: 240px;">

        <div class="profilecorpbanner" style=" height: 400px; border-radius: 3px 3px 0 0; position: relative; overflow: hidden;">       
            <img src="../images/defaultcover/defaultcover4.jpg" style="width: 100%;"/>
            <div class="corpbanner_mask" style="background: url('../images/bannershadow.png') repeat-x; position: absolute;bottom:0; width: 100%; height: 200px;"></div>
        </div>



        <div class="contactme-table easing" style="width: 87%;margin: auto;padding-bottom: 50px;">
            <table style="padding: 0 20px; width: 100%;font-size: 14px;  display: table;border-collapse: separate;border-spacing: 4px;margin: 40px 0 30px;">
                <tbody class="profilesnew-table" style="display: table-row-group; vertical-align: middle; border-color: inherit;">

                    <tr>
                        <td> Package:</td>
                        <td> 
                            <div class="new-btn" style="display: block;" {{action dropdown "package"}}>
                                 <span id="packgeSelection" >{{controller.packgeSelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.packgetDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                        </td>
                    </tr>

                    <tr>
                        <td>Client Name:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="client_name"  placeholder="John Key" }}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Client Email*:</td>

                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="owner" class="mustFill3"  placeholder="John_Key@gg.com"}}
                                </div>
                            </div>   
                            <div class="mustfull" id="emailFormat3" style="display: none">not correct email format.....</div>
                            <div class="mustfull" id="mustFill3" style="display: none">please fill in info... </div>
                        </td>
                    </tr>



                    <tr>
                        <td>Profile Name*: </td>                     
                        <td> 
                            <div style="display: block;">
                                {{view Ember.TextField valueBinding="profile_name"   class="mustFill1" placeholder="Heritage Tiles NZ"}} 
                            </div>
                            <div class="mustfull" id="mustFill1" style="display: none">please fill in info... </div>
                        </td>
                    </tr>


                    <tr>
                        <td>Profile Category:</td> 
                        <td  id="categorySelection" style="width: 48%;">{{controller.categorySelection}}</td>        
                        <td>
                            <div class="new-btn" style="display: block; width: 48%;" {{action dropdown "category"}}>
                                 <span id="categorySelection">{{controller.categorySelection}}</span>
                                <span class="caret"></span>
                            </div>
                            {{#if controller.categoryDropdown}}
                            {{view HubStar.DropdownListView}}
                            {{/if}}
                        </td>
                    </tr>



                    <tr>
                        <td>Physical Address:</td>
                        <td>Country*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="country" class="country"  placeholder="New Zealand" value="New Zealand"}}
                                </div>
                            </div>     
                            <div class="mustfull" id="country" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>Region*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="region" class="region"  placeholder="Auckland"}}
                                </div>
                            </div>
                            <div class="mustfull" id="region" style="display: none">please fill in info... </div>
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>Suburb*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="suburb"  placeholder="Suburb"}}
                                </div>
                            </div>
                        </td>
                    </tr>


                    <tr>
                        <td></td>
                        <td>Street Name*:</td>
                        <td> 
                            <div  style="display: block; margin-bottom: 5px;" >

                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="address"  placeholder="Street Address"}}
                                </div>


                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Contact Name:</td>
                        <td> 
                            <div  style="display: block; margin-bottom: 5px;" >

                                <div  style="margin: 0 5px 0;width: 48%;display: inline-block;">
                                    {{view Ember.TextField valueBinding="first_name"  placeholder="First Name"}}
                                </div>
                                <div style="margin: 0;width: 48%;display: inline-block;">
                                    {{view Ember.TextField valueBinding="last_name"  placeholder="Last Name"}}
                                </div>

                            </div>
                        </td>
                    </tr>




                    <tr>
                        <td>Contact Number:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_contact_number" placeholder="0987364531"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Website Name:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="website" placeholder="yourdomain.com"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Website URL:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="website_url" placeholder="http://www.yourdomain.com"}}
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>Profile URL*:</td>
                        <td> 
                            <div style="display: block;">
                                {{view Ember.TextField valueBinding="profile_url"  class="mustFill2"  placeholder="ie: heritage-tiles-nz * no spaces, no underscores, no special characters, all lower case"}}
                            </div>
<!--                            <div style="margin-bottom: 10px; color: #333;font-size: 13px;width: auto;display: inline-block;">
                                Note: Once the URL has been set, it cannot be changed nor undone.
                            </div>-->
                            <div class="mustfull" id="mustFill2" style="display: none">please fill in info... </div>
                            <div class="mustfull" id="invalide" style="display: none">invalide characters... </div>
                        </td> 
                    </tr>

