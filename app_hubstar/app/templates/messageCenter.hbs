{{#if controller.isUserself}}
<div class='Message-Board_comment-container'>
    <div class="Message-Board box" style="position: absolute; width: 545px; margin: 10px; border-radius:5px; overflow: hidden; background-color: rgb(255, 255, 255); top: 0px; left: 0px;">
        <div style="background-color: #f3f3f3; width:100%;height: 50px; border-bottom: 1px solid #ddd;padding: 0 20px;">
            <div style="color: #555;font-size: 18px;line-height: 50px;float: left;" ><i class="icon-envelope" >&nbsp;</i>Message</div>
            <div class='create-conversation easing'{{action selectNewConversation}}}><i class='icon-plus'></i></div>
        </div>

        <div class='Message-menu-messages-container' >
             <div class='each-conversation easing' {{action selectMessage}}>
                <div style="color: #555;font-size: 20px;font-weight: bold;line-height: 50px;float: left;margin: 25px 0 0px 50px;">
                    <i class="icon-comments-alt" style='margin-right: 20px;font-size: 23px;' >&nbsp;</i>Board</div>
            </div>

            <div class='each-conversation easing' {{action selectNotification}}>
                 <div style="color: #555;font-size: 20px;font-weight: bold;line-height: 50px;float: left;margin: 25px 0 0px 50px;">
                    <i class="icon-bell-alt" style='margin-right: 20px;' >&nbsp;</i>Notification</div>
            </div>

            {{render conversation }}

        </div>
    </div>

    
</div>
{{/if}}

        {{#if isMessageBoard}}       
        {{render userMessage}}      
        {{/if}}
        
        {{#if isNotification}}     
        {{render notification}}
        {{/if}}
        
        {{#if isNewConversation}}
        {{render newConversation}}
        {{/if}}
    
