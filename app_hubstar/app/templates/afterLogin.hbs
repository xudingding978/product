
<div style="height: 60px;width:50px;position:absolute;top:0;left:0;z-index: 1;" {{action showUserDropDown on="click"  target="view"}}>&nbsp;</div>

<div id="user-header-menu" style="" >

    <div class="user-face-size" data-toggle="dropdown" style="position: static;">
        <a class="user-face-size" style="position: absolute;z-index: -1"><img src="https://s3-ap-southeast-2.amazonaws.com/develop.devbox/profile_pic/default/defaultpic1.jpg" class="profilepic_user " /></a>           
        <a class="user-face-size" style="z-index: 1"><img {{bindAttr src="controller.user.photo_url_large"}} class="profilepic_user  easing" /></a>              
    </div>

    <ul id="user-dd-menu" class="hideClass edit-object-ul" style="padding: inherit;  width: 178px; right: 60px; position: relative; top:30px;display:none;">
        <li class="ite" ><a tabindex="-1" {{bindAttr href="controller.myUserProfile"}} {{action userDisplaynone "myUserProfile" on="click"  target="view"}}>
                            <i class="fa fa-user" style="">&nbsp;&nbsp;</i>
                <span>My Profile</span>
            </a></li>
        <li class="ite" ><a tabindex="-1" {{bindAttr href="controller.myMessageBoard"}} {{action userDisplaynone "myMessageBoard" on="click"  target="view"}}>
                            <i class="fa fa-envelope" style="">&nbsp;&nbsp;</i>
                <span>Messages</span>
            </a></li>
        {{#if controller.is_trends_user}}
        <li class="ite" ><a tabindex="-1"  href="" {{action userDisplaynone "new" on="click"  target="view"}}>
                            <i class="fa fa-briefcase" style="">&nbsp;&nbsp;</i>
                <span>My Business Profiles</span>
            </a></li>

            {{#if view.newProfile}} 
             <div id="profiles_display">
            {{render newProfileDisplay this}} 
            </div>
            {{/if}}
             {{#each view.profiles}}           
                 <a href="#/profiles/{{unbound this.profile_id}}">
                    <div style="height: 75px; width: 75px; position:relative; margin: 5px; line-height: 75px;border-radius: 5px;border: 1px solid #ddd;" > 
                        <img {{bindAttr src="this.profile_pic"}}  style="width:100%;margin-top: -5px;">
                                     <div style=" color: #555; margin: 5px;">{{this.profile_name}}</div>          
                    </div>
                </a>

            {{/each}} 




        {{/if}}

        <li class='ite'><a tabindex="-1" href="http://about.trendsideas.com/" target="blank" {{action userDisplaynone "about" on="click"  target="view"}}>
                           <i class="fa fa-question-circle" style="">&nbsp;&nbsp;</i>
                <span>Help</span>
            </a></li>
        <li class='ite'><a tabindex="-1" href="javascript:void(0)"  id="startButton" {{action startTour on="click"  target="view"}}>
                <i class="fa fa-info" style="">&nbsp;&nbsp;</i>
                <span>Take the tour</span>
            </a></li>
        <li class="ite"><a tabindex="-1" href="" {{action logout on="click"  target="view"}}  >
                <i class="fa fa-power-off" style="">&nbsp;&nbsp;</i>
                <span>Log out</span> 
            </a></li>

    </ul>

</div>
