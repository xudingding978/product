
<div id="google_pop" class="blur_black" style=""></div>


<div  id ="google_map_pop" class="aside-container radius-rounded-corner box" style="position: fixed; top: 15%; z-index: 10; margin: auto; left: 0px; right: 0px; width: 800px;height: 565px;background-color: #fff;overflow: hidden;border: 0;" >
    <div  id="map_canvas_pop"style="width: 800px; height: 425px; background-color: rgb(229, 227, 223); -webkit-transform: translateZ(0); position: relative; overflow: hidden;border-bottom: 1px solid #ddd; " >


    </div>
    <div class="scrollbarGoogleMap">
        <div  id="directionsPanel" style="position: absolute; width: 265px; direction: ltr; height: 425px; overflow: auto; overflow-x: hidden;right: 0px; top: 0px; border-left-width: 1px; border-left-style: solid; border-left-color: rgb(221, 221, 221); display: block;border-bottom: 1px solid #ddd;" > 
        </div>        
    </div>

    <div style="margin: 15px 0 5px;">
        <div style="margin: 10px auto;border-bottom: 1px solid #ddd; width: 87%;"> {{input type="text" value=fromAddress placeholder="From" class="no-effect"}}</div>
        <div style="margin: 10px auto; width: 87%"> {{input type="text" value=toAddress placeholder="To" class="no-effect"}}</div>
    </div>

    <div class="" style="height: 45px;position: relative;border-top: 1px solid #ddd;top: -1px;">
        <div class="message-btn easing" style='width: 33%;height: 45px;line-height: 45px;' value="Print map" onclick="printmap('google_map_pop');"><k class='icon-print'>&nbsp;</k>Print Map</div>



        <div id ="routeMode" class="message-btn easing" style="border: none; border-right: 1px solid #ddd;border-left: 1px solid #ddd; width: 34%;height: 45px;line-height: 45px;border-radius: 0;" {{action dropdownRoute target="view" on="click"}}>
            <span id="routeModeSelection">{{view.routeModeSelection}}</span>
            <span class="caret"></span>
        </div>

        <div id="routeModeDropdown" class="hideClass Dropdownstyle1" style="width: 100px; z-index: 1000; position: fixed;text-align: center;margin-left: 300px;margin-top: -160px;" {{action selectRoute target="view" on="click"}}>
            <li class="ite" value="DRIVING" >Bicycling</li>
            <li class='ite' value="WALKING">Walking</li>
            <li class='ite' value="BICYCLING">Driving </li>
            <li class="ite" value="TRANSIT">Transit</li>
        </div>



        <div  id="routeGo" class="message-btn easing" style='width: 33%;height: 45px;line-height: 45px;'>Get Direction <k class='icon-long-arrow-right'>&nbsp;</k></div>

    </div>

</div>



<script>
            function printmap(divName)
            {
                var printContents = document.getElementById(divName).innerHTML;
                var originalContents = document.body.innerHTML;

                document.body.innerHTML = printContents;
                window.print();
                document.body.innerHTML = originalContents;
            }

</script>
