</div>




<script>

                function logout() {

                    var address = document.URL;
                    var domain = address.split("/")[2];
                    $.ajax({
                        type: 'POST',
                        url: 'http://' + domain + '/site/logout',
                        contentType: 'application/json; charset=uft-8',
                        dataType: 'json',
                        success: function() {

                        }
                    });
                    localStorage.clear();
                }


</script>
