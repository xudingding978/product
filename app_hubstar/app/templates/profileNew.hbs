                    <tr>
                        <td>Request Keywords:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%; height:100px;">
                                    {{view Ember.TextArea valueBinding="keywords" class="no-resize"  placeholder="* Please ensure you use a commer seperated list!!! ie: bathroom, kitchen, living room"}}
