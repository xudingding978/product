 
<div  id ="tagit">

    {{#unless controller.change_tag_show}}
    <div class="box" style="bottom: 20px">
    </div>
    {{/unless}}
    <div id ="showTagSavePhoto"class="t-style-box">

        <div class="show-tag-title">          
            <div class="show-tag-title-font">  Request a new tag </div>
            <div class="closeview" {{action cancelTag }}>
                 <i class="fa fa-times"></i>
            </div> 
        </div> 
        <div class="show-tag-contactmebox-wapper">
            <div class="show-tag-part">
                <div>
                    <div class='show-tag-font'>Product Name</div> 
                    <div>
                        {{view Ember.TextArea valueBinding="controller.product_name" rows="1" cols="70" class="tag_currenprofile" placeholder="Say something about it!"}}
                    </div>
                </div>
                <div>
                    <div class='show-tag-font'>Write description:</div>
                    <div>
                        {{view Ember.TextArea valueBinding="controller.description" rows="10" cols="70" class="tag_descriptionbox" placeholder="Write something to introduce the product!"}}
                    </div>
                </div>
            </div>
            <div class="show-tag-link-to">
                <div class='show-tag-font'> Link to:</div>
                <div class="show-tag-link-to-content"> {{controller.linkTo}} </div>
            </div>
            <div class="show-tag-part-below">
                <div class="show-tag-part-below-left">
                    <div class="show-tag-left">
                      <div class='show-tag-font'>Profile:</div>
                        {{#unless controller.isReadProfile}}
                        <div class="show-tag-select-profile" {{action profileSwitch on="click" target="controller"}}>
                            {{controller.selectedDesc}}
                            &nbsp;<i class="fa fa-caret-down"></i>
                        </div>                      
                        {{else}}
                        <div class="show-tag-loading"> Loading <i class="spinner" style="">&nbsp;</i></div>
                        {{/unless}}
                        {{#if controller.selectTagProfile}}
                        <div id="login_lightbox" class="blur" {{action profileCanel }}>&nbsp;</div>
                        <div class="select-profile-save" style="top: 280px;">

                            <div class="" style="height:100%; font-size: 13px; font-weight: bold; overflow: auto; overflow-x:hidden; ">
                                <div  style="width: auto;line-height: 27px; padding: 0 20px;border-bottom: 1px solid #ddd;border-top: 1px solid #fff;">
                                    Your Profiles
                                </div>

                                {{#each controller.profiles}}
                                <div class="choose-exist-collection easing" style="width: auto;line-height: 27px; padding: 0 20px;border-bottom: 1px solid #ddd;border-top: 1px solid #fff;" {{action chooseProfile profile_name profile_id}}>
                                     <a class="exist-name easing"> {{profile_name}}</a>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        {{/if}}
                    </div>

                    <div class="show-tag-left">
                         <div class='show-tag-font'>Collection:</div>
                        {{#if chooseProfileItem}}
                        <div class="new-btn" style="display: inline-block;line-height: 24px;"  {{action collectionSwitch }} {{bindAttr text="controller.selectedTitle" }}>
                             {{controller.selectedTitle}}
                             &nbsp;<i class="fa fa-caret-down"></i>
                        </div>                   
                        {{/if}}
                        {{#if controller.selectionPop}}
                        <div id="login_lightbox" class="blur" {{action collectionSwitch }}>&nbsp;</div>
                        <div class="add-tag_select-tag">

                            <div style=" font-size: 16px; font-weight: bold; overflow: auto; overflow-x:hidden;">
                                {{#each controller.profileCollection}}
                                <div class="choose-exist-collection easing" {{action chooseRecord title id}}>
                                     <a class="exist-name easing"> {{title}}</a>
                                </div>
                                {{/each}}
                            </div>

                        </div>

                        {{/if}}
                    </div>
                </div>

                <div style="display:inline-block;margin:10px 20px;float:right;">
                    {{#if controller.selectedDesc}}
                    <div style="width: 74px; height: 74px; overflow: hidden;padding: 10px;background-color: rgba(0,0,0,0.03);position: relative;">
                        <img style="height: 54px;width: 54px;" {{bindAttr src="controller.selectedPhotoThumbnailUrl" }}>
                    </div>
                    {{/if}}
                </div>
            </div>


        </div> 

        <div class="" style="height: 45px;position: relative;border-top: 1px solid #ddd;top: -1px;border-radius: 0 0 3px 3px;overflow: hidden;">
            <div  class="message-btn easing" style="height:45px;line-height: 45px; border-right: 1px solid #ddd;" {{action cancelTag }}><i class='fa fa-times'>&nbsp;</i>Cancel</div>
            <div class="message-btn easing" style='height:45px;line-height: 45px;'{{action saveTag}}><i class='fa fa-check'>&nbsp;</i>Save</div>
        </div>

    </div>


    {{#if controller.change_tag_show}}

    <div class="box" style="bottom: -480px;">
    </div>
    {{/if}}
</div>
