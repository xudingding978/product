<div id="shareemail" class="blur_black"  {{action reviewCancel on="click" target="controller"}}>&nbsp;</div>
<div style="z-index: 11; padding: 35px; position: fixed; width: 25%; height: 50%; margin: 10px auto; border-radius:5px; overflow: hidden; background-color: rgb(255, 255, 255); top: 25%; left: 0px;display: block;right: 0;box-shadow: 0 0 5px #fff;">
    <div style=" width: 100%; height: 15%; resize: none;">
        {{view Ember.TextArea valueBinding="controller.emailDestination" rows="12" cols="70" class="no-resize" placeholder="Send this idea to..."}}
        <i class="fa fa-envelope-o" style="font-size: 40px;float: right;position: relative; z-index: 99999;top: -80%;right: 5%;"></i>
    </div>
    <div style=" width: 100%; height: 65%; resize: none; position: relative">

        {{view Ember.TextArea valueBinding="controller.emailBody" rows="12" cols="70" class="no-resize" placeholder="Add a massage"}}

    </div>
    <div style="float: right; position: absolute; display: inline-block; vertical-align: top;right: 5px; bottom: 55px; width: 25%; height: 25%;">
        <a href="#"><img {{bindAttr src="controller.currentUser.photo_url_large"}} class="profilepic_user  easing" style = "width: 100%; height: 100%"/></a> 
        <!--        owner_profile_pic-->
    </div>
    <span class="controlbtn-share-email">

        <div type="button" {{action  reviewCancel on="click" target="controller"}} class="new-btn">Cancel</div>
<!--        closeShareEmail-->

        <div type="button" {{action emailSend }}  class="new-btn green-btn">Submit </div>


    </span>
</div>

<div id="showprofile" style="z-index: 11; padding: 35px; position: fixed; width: 25%; height: 50%; margin: 10px auto; border-radius:5px; overflow: hidden; background-color: rgb(255, 255, 255); top: 25%; left: 50%;display: none;right: 0;box-shadow: 0 0 5px #fff;">
    <div style="float: right;position: relative; display: inline-block; vertical-align: top;margin: 5px 0;">
            <a href="#"><img {{bindAttr src="controller.owner_profile_pic"}} class="profilepic" style="max-width: 100%;max-height: 200%;"/></a>              
        </div>
</div>
<div id="showpic" class="displaypic" style="z-index: 11; padding: 35px; position: fixed; width: 25%; height: 50%; margin: 10px auto; border-radius:5px; overflow: hidden; background-color: rgb(255, 255, 255); top: 25%; left: 50%;display: none;right: 0;box-shadow: 0 0 5px #fff;">
    <div style="float: right;position: relative; display: inline-block; vertical-align: top;margin: 5px 0;">
            <a href="#"><img {{bindAttr src="controller.selectedPhotoThumbnailUrl"}} class="selected-preview" style="max-width: 100%;max-height: 200%;"/></a>              
        </div>
</div>