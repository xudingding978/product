


<div style="width: 100%; height: 100%; overflow: hidden; position: fixed;"> 
    <img src="../../../images/landingpagebg.jpg" style="width: 100%; height:100%; ">
</div>
<div class="group-profilewrapper">
    {{#if controller.groupStepOne}}

    <div id="group-step-1"  class="group-step">
        <div class="group-profile-title-top">
            <div class="group-step-title">Select Categories</div>     
            <div  class="group-step-button" {{action groupStep  "1"}} >NEXT</div>
        </div>



        <div class="group-content easing">    

            <div id ="" style="margin: 5px 20px 5px;" >                
                <div style="position: relative;"> 
                    {{#each controller.categorys}}
                    {{#if this.isResidential}}
                    <div class="select-interest" style=""{{action selectTopic ids topic}}>
                         <div id="minusSelect_{{unbound ids}}" class="invite-this-friend radius-circle easing" style="z-index: 10; right: 0;display:none;" {{action selectTopic ids topic}}><i class="fa fa-minus" ></i></div>
                        <div id="plusSelect_{{unbound ids}}" class="invite-this-friend radius-circle easing" style="z-index: 10; right: 0;" ><i class="fa fa-plus" ></i></div>
                        <div class="" style="position: relative;border-radius: 50%;overflow: hidden;top: -5px;float: left; ">
                            <div  class="usersobject-hoverarea easing" style="" ></div>
                            <div class="interest-image-container"><img {{bindAttr src="image"}} /></div>
                        </div>
                        <div class="interest-topic-name" >
                            {{topic}}
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div> 

            <div id ="" style="margin: 5px 20px 70px;" >

                {{#each controller.categorys}}
                {{#if this.isCommercial}}
                <div class="select-interest" style=""{{action selectTopic ids topic}}>
                     <div id="minusSelect_{{unbound ids}}" class="invite-this-friend radius-circle easing" style="z-index: 10; right: 0;display:none;" {{action selectTopic ids topic}}><i class="fa fa-minus" ></i></div>
                    <div id="plusSelect_{{unbound ids}}" class="invite-this-friend radius-circle easing" style="z-index: 10; right: 0;" ><i class="fa fa-plus" ></i></div>
                    <div class="" style="position: relative;border-radius: 50%;overflow: hidden;top: -5px;float: left; ">
                        <div  class="usersobject-hoverarea easing" style="" ></div>
                        <div class="interest-image-container"><img {{bindAttr src="image"}} /></div>
                    </div>
                    <div class="interest-topic-name">
                        {{topic}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>

        </div>

    </div>


    {{/if}}

    {{#if controller.groupStepTwo}}

    <div id="group-step-2" class="group-step"> 
        <div class="group-profile-title-top">

            <div  class="group-step-button" style="float:left" {{action groupStep "2"}} >BACK</div>
            {{#if controller.editingGroupTitle}}
            <div class="group-step-title" style="width:60%;cursor: pointer;">

                <div style="display: inline-block; width: 150px;">
                    {{input type="text" class="insert-profile-name" value=groupTitle}}
                </div>
                <div style="display: inline-block;vertical-align: bottom; margin-left:20px">
                    <div class="new-btn blue-btn"{{action yes controller.groupTitle}}><i class="fa fa-check fa fa-white"></i></div>
                    <div class="new-btn"{{action no controller.groupTitle}}><i class="fa fa-times fa fa-white"></i></div>
                </div>

            </div>
            {{else}}
            <div class="group-step-title" style="width:60%;cursor: pointer;"{{action changeTitle controller.groupTitle}}>Project Title</div>
            {{/if}}
            <div  class="group-step-button" {{action groupStep "2"}} >DONE</div>


        </div>


        <div class="group-content easing" >
            <div>{{view Ember.TextArea valueBinding="about-project"   class="mustFill6 no-resize" placeholder=""}}</div>
            
        </div>
    </div>








    {{/if}}



</div>















