
<div id="wysihtml5-editor-toolbar" class="htmleditor-container">
    <header>
        <ul class="commands">
            <li data-wysihtml5-command="bold" title="Make text bold (CTRL + B)" class="command easing"><i class="fa fa-bold editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="italic" title="Make text italic (CTRL + I)" class="command easing"><i class="fa fa-italic editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="insertUnorderedList" title="Insert an unordered list" class="command easing"><i class="fa fa-list-ul editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="insertOrderedList" title="Insert an ordered list" class="command easing"><i class="fa fa-list-ol editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="createLink" title="Insert a link" class="command easing"><i class="fa fa-link editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="insertImage" title="Insert an image" class="command easing"><i class="fa fa-picture-o editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1" title="Insert headline 1" class="command easing"><i class="editor-icon">H1</i></li>
            <li data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2" title="Insert headline 2" class="command easing"><i class="editor-icon">H2</i></li>
            <li data-wysihtml5-command-group="foreColor" class="fore-color command easing" title="Color the selected text"><i class="editor-icon"> T </i>
                <ul>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="silver"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="gray"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="maroon"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="red"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="purple"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="green"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="olive"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="navy"></li>
                    <li data-wysihtml5-command="foreColor" data-wysihtml5-command-value="blue"></li>
                </ul>
            </li>
            <li data-wysihtml5-command="insertSpeech" title="Insert speech" class="command easing"><i class="fa fa-microphone editor-icon">&nbsp;</i></li>
            <li data-wysihtml5-action="change_view" title="Show HTML" class="action easing"><i class="fa fa-code editor-icon">&nbsp;</i></li>
        </ul>
    </header>
    <div data-wysihtml5-dialog="createLink" class="easing htmleditor-toolarea" style="display: none;"><!-- keep this display style inline -->
        <div class="htmleditor-input">
            Link:
            <input class="disabled-btn" data-wysihtml5-dialog-field="href" value="http://">
        </div>
        <a class="new-btn blue-btn htmleditor-btn" data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a class="new-btn htmleditor-btn" data-wysihtml5-dialog-action="cancel" >Cancel</a>
    </div>


    <div data-wysihtml5-dialog="insertImage" class="easing  htmleditor-toolarea" style="display: none;"><!-- keep this display style inline -->
        <div class="htmleditor-input">
            Image: 
            <input class="disabled-btn" data-wysihtml5-dialog-field="src" value="http://">
        </div>
        <a class="new-btn blue-btn htmleditor-btn" data-wysihtml5-dialog-action="save" >OK</a>&nbsp;<a class="new-btn htmleditor-btn" data-wysihtml5-dialog-action="cancel" >Cancel</a>
    </div>
</div>


<section>

    <div class="wysihtml5_text-area htmleditor-textarea" >
        {{view Ember.TextArea valueBinding="model.profile_about_us" id="wysihtml5-editor"}}
    </div>

</section>

