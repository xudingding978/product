                        <td>Editor*:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%; height: 100px;">
                                    {{view Ember.TextArea valueBinding="editors"   class="mustFill6 no-resize" placeholder="Ironman@hubstar.com, CaptainAmerica@hubstar.com, hulk@hubstar.com"}}
                                </div>
                            </div>                   
                            <div class="mustfill" id="emailFormat6" style="display: none">not correct email format.....</div>
