<div id="user-header-menu" style="">

    <div class="user-face-size" data-toggle="dropdown" style="position: static;">
        <a class="user-face-size" style="position: absolute;z-index: -1"><img src="https://s3-ap-southeast-2.amazonaws.com/develop.devbox/profile_pic/default/defaultpic1.jpg" class="profilepic_user " style='width: 45px;height:45px;'/></a>           
        <a class="user-face-size" style="z-index: 1"><img {{bindAttr src="controller.user.photo_url_large"}} class="profilepic_user  easing" style='width: 45px;height:45px'/></a>              
    </div>

    <ul id="user-dd-menu" class="hideClass edit-object-ul" style="padding: inherit;  width: 165px; right: 56px; position: relative; top:30px;">
        <li class="ite" ><a tabindex="-1" {{bindAttr href="controller.myUserProfile"}}>
                <k class="fa fa-user" style="">&nbsp;&nbsp;</k>
                <span>My Profile</span>
            </a></li>
        <li class="ite" ><a tabindex="-1" {{bindAttr href="controller.myMessageBoard"}}>
                <k class="fa fa-envelope" style="">&nbsp;&nbsp;</k>
                <span>Messages</span>
            </a></li>
                {{#if controller.is_trends_user}}
                <li class="ite" ><a tabindex="-1"  href="#/profiles/new">
                        <k class="fa fa-briefcase" style="">&nbsp;&nbsp;</k>
                        <span>New Profile</span>
                    </a></li>
                {{/if}}

                <li class='ite'><a tabindex="-1" href="http://about.trendsideas.com/" target="blank">
                        <k class="fa fa-question-circle" style="">&nbsp;&nbsp;</k>
                        <span>Help</span>
                    </a></li>
                <li class="ite"><a tabindex="-1"{{action logout on="click"  target="view"}}  >
                        <k class="fa fa-power-off" style="">&nbsp;&nbsp;</k>
                        <span>Log out</span> 
                    </a></li>

    </ul>

</div>




