
{{#if getProfile}}
<div class="box col2 noStyle1"  {{action checkingLoginStatus target="view" on="click"}}>
    <div class="masonry-object">

        {{render itemProfiles this}}
        {{render "comment" this}}
    </div>
</div>


{{/if}}


{{#if getPhoto}}
<div class="box col2 noStyle1" {{action checkingLoginStatus target="view" on="click"}}>

    <div class="masonry-object">
        <div class="masonry-object_poster">
            <a class="profilepic-on-masonry" style="cursor: pointer">
                <img  {{action transitionToProfile owner_id}} {{bindAttr src="owner_profile_pic"}}/>
            </a>
            <div class="object_username">
                <a class="poster-name" style="cursor: pointer; width: auto;" {{action transitionToProfile owner_id}}>{{owner_title}}</a>
                <div class="posttime-container">
                    <span class="posttime">{{date created}}</span>
                </div>
            </div>


            <div class="object-tags-box">

                <div class="object-tags">
                    <span class="tags-mark" style="background-color: #427fed"></span>
                    <div class="tags easing">
                        <!--                        <div class="tags-new">New </div>-->
                        <div class="object-tpye">
                            <i class="icon-picture"></i>
                        </div>
                    </div>
                </div>

                <div class="object-tags ">
                    <span class="tags-mark" style="background-color: #76a7fa"></span>
                    <div class="tags easing tagsappear">
                        <div class="tags-new">#{{region}}</div>                   
                    </div>
                </div>

                <div class="object-tags ">
                    <span class="tags-mark" style="background-color: #a0c3ff"></span>
                    <div class="tags easing tagsappear">
                        <div class="tags-new">#{{timezone}} </div>                   
                    </div>
                </div>

            </div>


        </div>
        <div class="masonry-object_mainfeature">             
            <div class="mainfeature-wrapper">
                <a class="mainfeature-container" style="cursor: pointer">

                    <img class="this-is-the-object"{{bindAttr src="object_image_url" }} {{action transitionToPhoto id}} />
                </a>            

                <span class='edit-object easing' style="position: absolute;margin: 10px; top:0;">
                    
                    {{#if controller.is_authentic_user}}
                     

                    <div class="new-btn blue-btn hint--right hint--rounded" data-hint="Edit object" {{action dropdownPhotoSetting id}}>
                         <k class="icon-cog" style="font-size: 16px; margin: 0px 5px"></k>
                        <k class='icon-caret-down'></k>
                    </div>
                    <ul class="hideClass edit-object-ul" id="dropdown_id_{{unbound id}}">
                        {{#if controller.is_profile_editing_mode}}
                        <li class="ite" {{action  removeCollectedItem controller.title id "profile"}}><k class="icon-trash" style="font-size: 16px; margin: 0px 5px;"></k>Delete</li>
                        <li class='ite'  {{action changeCollectionCover id controller.collection_id HubStar.Profile}}> <k class="icon-ok-sign" style="font-size: 16px;  margin: 0px 5px;"></k>Set as collection cover</li>
                        {{/if}}
                        {{#if controller.is_user_editing_mode}}
                        <li class="ite" {{action  removeCollectedItem  controller.title id "user"}}><k class="icon-trash" style="font-size: 16px; margin: 0px 5px;"></k>Remove</li>
                        <li class="ite" {{action changeCollectionCover id controller.title "user"}}><k class="icon-camera" style="font-size: 16px; margin: 0px 5px;"></k>Set as Cover</li>
                        {{/if}}
                    </ul>

                    {{/if}}
                </span>

            </div>



            <div class="masonry-object_text">
                <div class="masonry-object_text-container">
                    <p>    {{photo_title}}</p>

                </div>

                <div class="more_detail" {{bindAttr id="id"}} >
                    <div class="more_text-container" >
                        <div style="display:block;">
                            {{object_description}}
                        </div>
                    </div>

                    <span role="button" class="masonry_more-btn easing"  {{bindAttr id="more_button"}} {{action 'moreContent' this target='view' on="click"}}>more &nbsp;<i class="icon-angle-down"></i></span>
                    <span role="button" class="masonry_more-btn easing" {{bindAttr id="collape_button"}}  style="display: none" {{action 'collapeContent' this target='view' on="click"}}>collapse &nbsp;<i class="icon-angle-up"></i></span>

                </div>
            </div>
        </div>
        {{render "comment" this}}
    </div>


</div>


{{/if}}

