<div class="navbar">


    <div class="navbar-inner">

        <div class="brand" data-step="1" data-intro="Click on the <b>Trends logo</b> to return to the main Search Wall." data-position='right'>
            <a href="/#/search" > <img class="logonew" {{action showDiscoveryBar}} src="../../../images/landing-trends.png"></a>
            <a href="/#/search" > <img class="logonew-small" {{action showDiscoveryBar}} src="../../../images/trendsIcon.png"></a>
        </div>
        <div id="top-about-menu" class="top-about-menu" {{action showAboutDropDown on="click" target="view"}}>
            <i class="fa fa-info" style="color: #555;z-index: 10;position: absolute;left: 9px;font-size: 13px;top: 2px;"></i>
            <i class="fa fa-comment fa-lg" style="font-size: 23px;position: absolute;"></i>
        </div>
        <ul id="top-menu" class="edit-object-ul" style="display:none;width: 160px;position: absolute;top:80px;left: 120px;">
            <li class="ite" > <span><a  target="blank" href="http://about.trendsideas.com/">About</a></span></li>
            <li class="ite" > <span><a target="blank" href="http://about.trendsideas.com/business/">Business</a></span></li>
            <li class="ite" >  <span><a target="blank" href="http://about.trendsideas.com/learning-centre/">Learning Centre</a></span></li>
            <li class="ite" >  <span><a target="blank" href="http://about.trendsideas.com/contact-us/">Contact us</a></span></li>

        </ul>





        {{#if HubStar.isLogin}}

        <div id="login_details" class="Geo-Filter easing">
            <div id="login_detail" data-step="4" data-intro="Click on your <b>Profile Picture</b> to access your Profile, Message Centre, Help options or to log out.">
                {{view HubStar.AfterLoginView}}
            </div>
        </div>

        <div id="Geo-Filter" class="Geo-Filter easing"  {{action dropdown "notification"}} data-step="3" data-intro="New notifications will appear beside the <b>Notification icon</b>. Click the icon to see your latest notifications.">
            <div class="circle-btn"><i class="fa fa-bell fa-lg" ></i></div>
            <div class="circle-btn-description">Notification</div>
            {{#if isUnReadCountZero}}
            <div class="notification-number">{{unReadCount}}</div>
            {{/if}}
        </div>
        {{else}}

        <div id="login_icon" class="Geo-Filter" style="position: absolute; right: 80px;">

            {{view HubStar.BeforeLoginView}}

        </div>

        {{/if}}

        <!-- user is logged in -->

        {{#if isNotification}}
        <div style="position: relative; float: right; top: 68px; z-index: 100;">
            <div style="position: absolute;border-color: transparent transparent #f3f3f3 transparent;border-style: solid;border-width: 10px 10px 10px 10px;z-index: 0;top: 5px;"></div>
            <div style="position: absolute;border-color: transparent transparent #888 transparent;border-style: solid;border-width: 10px 10px 10px 10px;z-index: -1;top: 5px;"></div>
        </div>
        {{render notificationTop}}
        {{/if}}

        <div id="geo-filter" class="Geo-Filter easing "  {{action dropdown "geoLocation"}} data-step="2" data-intro=" Use the <b>Location Filter</b> to filter search results by region.">
            <div class="circle-btn"><i class="fa fa-globe fa-lg"></i></div>
            <div class="circle-btn-description">Country</div>
            <div class="Geo-Filter-location">{{HubStar.geoLocation}}</div>
        </div>

        {{#if controller.isGeoDropdown}}
        {{view HubStar.DropdownListView}}
        {{/if}}
        <div class="search-bar-on-large-screen" >
            <div id="search-bar" class="search-bar-ontop">
                <div id ="navigator" class="Nav-btn easing" {{action dropdownHeaderNavigator}}>
                     <i class="fa fa-list" style="font-size: 20px;"></i>
                    <div style="line-height: 0;position: relative;bottom: 5px;">Categories</div>
                </div>


                {{#if controller.isHeaderNavigatorDropdown}}
                {{view HubStar.NavigatorView}}
                {{/if}}
                <div class="search-box easing" >
                    {{view HubStar.SearchRequireTextFieldView valueBinding="search_string"  id="search_businesses" class="no-effect hover-opacity easing" placeholder="Search by keyword" }}
                    <div class="Nav-btn easing" style="position: relative;float: right;border-radius: 0 3px 3px 0;top: -60px; right: -5px;border-left: 1px solid #ddd;width: 60px"  {{action searching on="click" target="view"}}>
                        <i class="fa fa-search" style="font-size: 20px;line-height: 3;"></i>
                    </div>
                </div>
            </div>
            <div  id="topResidentialCommerical">
                <div id="residential1" class="residentialCommericalTop residentialCommerical-selected easing"   {{action residential on="click" target="view"}}>Residential</div>
                <div id="commercial1" class="residentialCommericalTop residentialCommerical-selected easing"  {{action commercial on="click" target="view"}}>Commercial</div>
            </div>
        </div>

    </div>




    <div class="search-bar-on-small-screen">

        <div id="search-bar" class="search-bar-ontop">
            <div id ="navigator" class="Nav-btn easing"  {{action dropdownHeaderNavigator}}>
                 <i class="fa fa-list" style="font-size: 20px;"></i>
            </div>
            {{#if controller.isHeaderNavigatorDropdown}}
            {{view HubStar.NavigatorView}}
            {{/if}}
            <div class="search-box easing" >
                {{view HubStar.SearchRequireTextFieldView valueBinding="search_string"  id="search_businesses" class="no-effect hover-opacity easing" placeholder="Search by keyword" }}
                <div class="Nav-btn easing" style="position: relative;float: right;border-radius: 0 3px 3px 0;top: -60px; right: -5px;border-left: 1px solid #ddd;"  {{action searching on="click" target="view"}}>
                    <i class="fa fa-search" style="font-size: 20px;"></i>
                </div>
            </div>
        </div>

        <div  id="topResidentialCommerical">
            <div id="residential1" class="residentialCommericalTop residentialCommerical-selected easing"   {{action residential on="click" target="view"}}>Residential</div>
            <div id="commercial1" class="residentialCommericalTop residentialCommerical-selected easing"  {{action commercial on="click" target="view"}}>Commercial</div>
        </div>

    </div>
</div>


<script type="text/javascript">


    function setDomain() {

        var api_url = document.domain;
        var api_domain_start_pos = api_url.indexOf('.');
        var api_url = api_url.slice(api_domain_start_pos);

        return api_url;
    }




</script>
