<script src="scripts/views/RegisterSliders.js"></script>
<div class="Register-Page" style="">
    <img src="../../../images/landingpagebg.jpg" style="width:100%; position:fixed;"/>

    <div style="width: 87%;margin: 40px auto;display: block;line-height: 45px;">
        <img class="logonew" style="position: relative; height: 30px;display: inline-block;vertical-align: top;margin: 8px;" src="../../../images/landing-trends.png">
        <div style="position:relative; float:right;color: #fff; font-size:15px;font-weight: bold;">
            <span style="letter-spacing: 1px; margin: 0 0 0 10px;cursor:pointer;" onClick="loginPane();" id="login-btn" class="white-text-hover easing">LOGIN</span>
            <span>&nbsp | &nbsp</span>

            <a href="http://trendsideas.com/ViewPage.aspx?pageName=Contact%20Us&region=1" target="blank"><span class="white-text-hover easing" style="letter-spacing: 1px; margin: 0 0 0 10px;">HELP</span></a>

        </div>
    </div>

    <div style="position: absolute; vertical-align: middle; color: #fff; width: 600px; text-align: center;margin: auto;left: 0;right: 0;top: 55px;font-size: 13px; font-family: 'Montserrat', sans-serif; letter-spacing: 2px;opacity: .9;">
        <span>83,000 IDEAS</span>
        <span>&nbsp | &nbsp</span>
        <span>210,000 PRODUCTS</span>
        <span>&nbsp | &nbsp</span>
        <span>650 SERVICES</span>
    </div>

    <div id="profiles-main-container" style="position:absolute;width: 33%;text-align: center;top: 21%;margin: auto;display: block;left: 0;right: 0;">
        <img style="position: relative;margin: 10px auto 40px -10px; min-width: 320px;width: 70%;" src="../../../images/landing-trends.png">

        <div id="click-register-social" class="register-with easing social-active" style="border-radius: 5px 5px 0 0; border-bottom:1px solid #e3e3e3;">
            <i class="icon-facebook">&nbsp</i><a style="color: #888"> Register with social account</a>
        </div>

        <div id="social-link" style="display: block; width: 300px; height: 60px; line-height: 60px; margin: 0px auto; background-color: white;padding:12px;border-bottom: 1px solid #e3e3e3;">

            <div onclick="Facebook(650, 400);"class="social-login-iconbox">
                <i  class="icon-facebook"></i>
            </div>

            <div onclick="Twitter(650, 400);" class="social-login-iconbox">
                <i class="icon-twitter"></i>
            </div>

            <div onclick="Google(650, 400);" class="social-login-iconbox" style="">
                <i  class="icon-google-plus"></i>
            </div>

            <div onclick="LinkedIn(650, 400);" class="social-login-iconbox">
                <i  class="icon-linkedin"></i>
            </div>

            <div onclick="Sina(650, 400);" class="social-login-iconbox">
                <i class="icon-weibo"></i>
            </div>

        </div>


        <!--This is the email register section-->
        <div>
            <div id="click-register" class="register-with easing register-clicker">
                <i class="icon-envelope">&nbsp </i><a style="color: #888"> Register with Email</a>
            </div>

            <div   id="register-with-email-drop-down" style="width: 300px;margin: 0 auto ;background-color: #fff;border-radius: 0 0 5px 5px;display:none;">
                <div style="padding: 0 8px;position: relative;">

                    <div style="border-bottom: 1px solid #e3e3e3; border-top:1px solid #e3e3e3;">
                        <div id="first_name"class="login-textfield" style="width: 49%;display: inline-block;vertical-align: top;height: 45px;line-height: 45px;">
                            {{view Ember.TextField valueBinding="first_name" placeholder="First Name" }}
                        </div>

                        <div id="last_name"class="login-textfield" style="width: 49%;display: inline-block;vertical-align: top;height: 45px;line-height: 45px;">
                            {{view Ember.TextField valueBinding="last_name" placeholder="Last Name" }}
                        </div>
                    </div>

                    <div  id="email"class="login-textfield" style="margin: 0;width: 100%;height: 45px;line-height: 45px;border-bottom: 1px solid #e3e3e3;">
                        {{view Ember.TextField valueBinding="email" placeholder="Your Email" }}
                    </div>

                    <div id="password"class="login-textfield"  style="margin: 0;width: 100%;height: 45px;line-height: 45px;border-bottom: 1px solid #e3e3e3;">
                        {{view Ember.TextField type="password" valueBinding="password" placeholder="Password" }}
                    </div>
                </div>

                <div id="register-btn" class="register-btn easing" style="" {{action signUp}} > Register</div>
            </div>


            <div id="register-with-email-step-2" style="width: 300px;margin: 0 auto ;background-color: #fff;border-radius: 0 0 5px 5px;display:none;">
                <div style="padding: 0 8px;position: relative;">

                    <div  class="login-textfield" style="margin: 0;width: 100%;height: 45px;line-height: 45px;border-bottom: 1px solid #e3e3e3;border-top:1px solid #e3e3e3;">
                        {{view Ember.TextField valueBinding="region" placeholder="Region" }}
                    </div>

                    <div style="border-bottom: 1px solid #e3e3e3;">
                        <div class="login-select easing" style=""{{action setmale}}>
                             Male
                    </div>

                    <div class="login-select easing" style=""{{action setfemale}}>
                         Female
                </div>
            </div>

            <div class="login-textfield"  style="margin: 0;width: 100%;height: 45px;line-height: 45px;border-bottom: 1px solid #e3e3e3;">
                {{view Ember.TextField valueBinding="age" placeholder="How old are you?" }}
            </div>
        </div>
        <div class="back-btn easing" style="" >Back</div>
        <div class="register-btn easing register-btn-small"  {{action done}}>Done</div>

    </div>

</div>
<!--End of email register section-->

<div id="user-login-pane"  style="display:none;border-radius: 5px 5px 0 0;">

    <div id="social-login" class="register-with easing" style="border-radius: 5px 5px 0 0; border-bottom:1px solid #e3e3e3;">
        <i id="social-login" class="icon-facebook">&nbsp</i><a style="color: #888"> Login with social account</a>
    </div>
    <div id="social-login-container" style="display: none; width: 300px; height: 60px; line-height: 60px; margin: 0px auto; background-color: white;padding:12px;border-bottom: 1px solid #e3e3e3;">

        <div onclick="Facebook(650, 400);" class="social-login-iconbox">
