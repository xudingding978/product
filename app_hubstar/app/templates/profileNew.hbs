                    <tr><td style="font-weight: bold;">Image Upload</td></tr>
                    <tr>
                        <td>Background:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_bg_url"  class="background"  placeholder="http://yourBackgroundImage" }}
                                </div>
                            </div>
                        </td>
                        <td>
                            <img style="width:50px" {{bindAttr src="profile_bg_url"}} />

                        </td>
                    </tr>

                    <tr>
                        <td>Hero:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_hero_url"  class="hero"  placeholder="http://yourHeroImage" }}
                                </div>
                            </div>
                        </td>
                        <td>
                            <img style="width:50px" {{bindAttr src="profile_hero_url"}} />

                        </td>
                    </tr>


                    <tr>
                        <td>Picture:</td>
                        <td> 
                            <div style="display: block;">
                                <div   style="margin: 0;width: 100%;">
                                    {{view Ember.TextField valueBinding="profile_pic_url"  class="picture"  placeholder="http://yourPictureImage" }}
                                </div>
