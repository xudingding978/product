<div id ="tagitshow" class="display-none" {{action hideContent on="mouseLeave" target="view"}} >
    <!--enable to edit the tag controller-->
    <div class="tagitshow">
    <div class="tagImg">
        <div class ="tagImg-target" {{action gotoTarget controller.tag.linkto on="click" target="view"}}" > 
            <img  {{bind-attr src= "controller.tag.pic_url"}} style="width:{{unbound controller.tag.width}}; height:{{unbound controller.tag.height}}">
        </div>
    </div>
    <div class="tagMiddle">
        <div class="tagName" class="name">
            {{controller.tag.product_name}}
        </div>
        <div class="tagContent">

            {{#if controller.isNullLink}}
            <div class="tagDesc">
                {{controller.tag.desc}}
            </div>
            {{else}}
           <div class ="tagImg-target" {{action gotoTarget controller.tag.linkto on="click" target="view"}}" > 
                <div class="tagDesc">
                    {{controller.tag.desc}}
                </div>
            </div>
            {{/if}}

        </div>

    </div>

    <!--  only the tag owner and the tag is not activate can have the activate button-->
    <div class="tagBtn">
        {{#if controller.is_authentic_user}}
        {{#unless controller.tag.tag_approved}}
        <div id="tag_activate_button" {{action sureToActivate controller.tag.tag_id }} >
             <i class="fa fa-check-circle"></i>
            <div id ="tag_activate_button_text" class="tag-button" >
                activate
            </div>
        </div>
        {{else}}
        <div id="tag_edit_button"  {{action EditTag controller.tag.tag_id }}>
             <i class="fa fa-pencil-square-o"></i>
             <div id ="tag_edit_button_text" class="tag-button">
                edit
            </div>
        </div>
        {{/unless}}
        <!--        only the tag owner can delete the tag button-->
        <div id="tag_delete_button"  {{action deleteTag controller.tag.tag_id }} >
             <i class="fa fa-trash-o"></i>
            <div id ="tag_delete_button_text" class="tag-button">
                delete
            </div>
        </div>
        <!--        only the tag owner can delete the tag button-->
        {{else}}
        {{#if controller.tag.is_tag_owner}}
        <div  id="tag_edit_button"  {{action EditTag controller.tag.tag_id }}>
            <i class="fa fa-pencil-square-o"></i>
             <div id ="tag_edit_button_text" class="tag-button">
                edit
            </div>
        </div>
        <div id="tag_delete_button"  {{action deleteTag controller.tag.tag_id }}>
            <i class="fa fa-trash-o"></i>
            <div id ="tag_delete_button_text" class="tag-button">
                delete
            </div>
        </div>
        {{/if}}
        {{/if}}       
    </div>
    
    </div>
</div>


