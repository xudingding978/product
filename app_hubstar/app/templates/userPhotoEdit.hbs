<div id="user-photo_left-back">
    {{#if controller.isPhotoUploadMode}}
    {{#view HubStar.SingleFileUploaderView }}

    <div id="dragAndDroppArea" class="dragndropbox" style="display:block;height: 375px;top: 0;background-color: #fff; padding: 0;overflow: hidden">

        <div class='styleup_uploadbox easing' style=" height: 350px;width: 93%;position: absolute;">
            <i class='icon-upload icon-3x' style="width: 40px;margin: auto;display: block;position: relative;top: 125px;" ></i>
            <span style="display: block; position: relative;line-height: 30px;font-size: 30px;top: 140px; cursor: default;  font-weight: bold">Drag & drop</span>
            <span style='font-size: 16px;display: block;line-height: 18px;position: relative;top: 230px;'> {{controller.RequiredImageSize}}</span>
                            

            <div style="position: absolute;  vertical-align: top; text-align: center;width: 100%;height: 345px;top: 0;line-height: 345px;background-color: Rgba(30,30,30,.2);">
                <div>
                    <img  {{bindAttr src= "newStyleImageSource"}}  style="max-width: 170px; max-height: 170px;border: 5px solid #f3f3f3;">
                    <div id='uploadStyleImg' style="display: none;">
                        <img style="width: 25px; height: 25px;position: absolute;top: 40%;left: 62px;" src="../../../images/uploadphotos_spinner.gif"/>
                    </div>
                </div>
                <div style="margin: 2px auto 5px; font-size: 13px; text-overflow:ellipsis; text-align: center; width: 150px;overflow: hidden;word-wrap: break-word;line-height: 15px; display: none">{{newStyleImageName}}</div>

            </div>

        </div>
    </div>



    <div style="text-align: center;height: 75px;line-height: 85px;background-color: #f3f3f3;bottom: 0;position: absolute;width: 100%;">
        <div class="new-btn blue-btn" style="margin: 28px 20px; width: 67px; float: left;">
            Choose 
            <div style="opacity:0;position: absolute;top: 0px;left: 0;"> {{view HubStar.SingleImageInputButtonView }}</div>
        </div>

        <div style="margin: auto;width: 150px;float: right;">
            <span class="new-btn green-btn " {{action savePhotoUpdate}} >Save</span>
            <span class='new-btn flip-back'{{action userPhotoEditBackButton }}><k class='icon-user'> &nbsp;</k>Back</span>
        </div>
    </div>
    {{/view}}
    {{/if}}
</div>



