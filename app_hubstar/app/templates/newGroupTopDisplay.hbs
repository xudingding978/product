
<div id="user_groups_dropdown_scrollbar">  

    {{#each model}}
    <a href="#/groups/{{unbound this.group_id}}"> 
        <div>
            <div class="profile-top-image-position" > 
                
                <img {{bindAttr src="this.group_pic_url"}}  style="width:{{unbound this.width}};height:{{unbound this.height}}">                  
            </div>
            <div class="profile-top-name-position">{{this.group_name}}</div> 
        </div>
    </a>
    {{/each}}
</div>