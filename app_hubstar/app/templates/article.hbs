{{#if controller.showEachTagContent }}
{{  view HubStar.TagContentView }}
{{/if}}
{{/unless}}
<!--     show all the tags--> 
{{#if controller.showAllTagsArticle}} <!--      showOrNot tag-->
{{#each controller.contentTagsArticle}}
{{view HubStar.TagMouseView}} 
{{/each}}
{{/if}}
{{/if}}

