{{#if controller.loadingTime}}

{{render loadingSpinner}}

{{/if}}

<div class="Message-Board box" style="position: relative; width: 545px; margin: 10px;border-radius: 5px;overflow: hidden;background-color: #fff;">
    <div style="background-color: #f3f3f3; width:100%;height: 50px; border-bottom: 1px solid #ddd;padding: 0 20px;">
        <div style="color: #555;font-size: 18px;line-height: 50px;"><i class="icon-comments-alt">&nbsp;</i>Message Board</div>

    </div>

    <div class="" id="" style="width: 100%;padding: 20px 6.5%;margin: 0 auto;overflow: hidden;border-bottom: 1px solid #ddd;">
        <div style="margin:0 auto; padding: 0 0 0 45px;">
            <a>
                <img class="profilepic_comment"  style="float: left; margin: 4px 0 0 -45px; margin-top: 0;" {{bindAttr src= this.commenter_photo_url}} /> 
                <div class='user-says-angle-before'></div>
                <div class='user-says-angle-after'></div>
            </a>

            <div class="post-comment-container">
                <div   style="margin: 0;width: 100%; height:50px;">
                    {{view Ember.TextArea valueBinding="messageContent" class="no-resize" placeholder="What's up!" }}                                          
                </div>
                <div style='background-color: #f3f3f3;margin: auto;max-width: 300px;max-height: 300px;padding: 10px 12px;text-align: center;'>
                    <img  {{bindAttr src= "newStyleImageSource"}}  style="max-width: 170px; max-height: 170px;">
                </div>
                <div class="" style="height: 30px;position: relative;border-top: 1px solid #ddd;top: -1px;">
                    <div  class="message-btn easing" style="height: 30px; border-right: 1px solid #ddd; line-height: 30px;font-size: 12px;"><k class='icon-picture'>&nbsp;</k>Add Photo
                        <div style="opacity:0;position: relative;height:30px;top:-30px;overflow: hidden;"> 
                            {{view HubStar.SingleImageInputButtonView }}
                        </div>
                    </div>
                    <div class="message-btn easing" style='height: 30px; line-height: 30px;font-size: 12px;'{{action addComment}}><k class='icon-ok'>&nbsp;</k>Post</div>
                </div>
            </div>

        </div>
    </div>



    <div class='Message-Board_comment-container'>
        {{#each  contentMsg}}

        {{render "message" this}}

        {{/each}}

    </div>
</div>



