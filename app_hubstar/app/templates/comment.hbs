
<div class="masonry-object_interact" >

    <div class="reply-comment-frame reply-comment-frame2">
        <div class="reply-comment-innerframe">
            <a  href="#/users/{{unbound controller.currentUser.id}}">
                <img class="profilepic_comment comment-item-img2 comment-item-img-z1" src="http://develop.devbox.s3.amazonaws.com/profile_pic/default/defaultpic1.jpg"  /> 
                <img class="profilepic_comment comment-item-img2 comment-item-img-z2" {{bindAttr src="controller.currentUser.photo_url_large"}}/> 
                <div class="user-reply-angle-before user-says-angle-before3"></div>
                <div class="user-reply-angle-after user-says-angle-after3"></div>
            </a>
            <div class="reply-comment-container reply-comment-container-w">
                <div id ="commentnew_{{unbound model.id}}"class="reply-comment-inputBox">
                    {{view HubStar.SearchAreaTextFieldView valueBinding="commentContent" class="no-resize" placeholder="Write a comment..." }}                                          
                </div>
                <div class="reply-comment-action">

                    <div class="message-btn easing message-btn-w" {{action openComment model.id}}>
                         <i class='fa fa-check'></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="commentData_{{unbound model.id}}" class="reply-display">
        <div id="commentScrollBar_{{unbound model.getID}}" class="comment-scroll-bar" >
            {{#each model.comments}}
            {{#unless this.isEdit}}
            <div class="comment-item comment-frame article-display" id="commentItem_{{unbound message_id}}">

                <div class="comment-position">
                    <a class="profilepic-comment-container" href="#/users/{{unbound commenter_id}}" {{action linkingUser commenter_id}}>
                       <img class="profilepic_comment" {{bindAttr src="commenter_profile_pic_url"}} />
                    </a>
                    <div>
                        <div class="comment-namentime">
                            {{#if this.getUser}}
                            <span class="edit-comment easing">
                                <i class="fa fa-trash-o"  {{action removeComment this}}></i>                 
                                <i class="fa fa-pencil" {{action editingCommentData this}}></i>
                            </span>
                            {{/if}}
                            <a class="comment-username"  href="#/users/{{unbound commenter_id}}" {{action linkingUser commenter_id}}>
                               {{name}}    
                        </a>
                        <div class="posttime-container">
                            <span class="posttime">{{date  time_stamp}}</span>
                        </div>
                    </div>
                    <div class="comment-content">
                        {{content}} 
                    </div>

                </div>
            </div>

        </div>

        {{else}}
        <div class="comment-item article-display" id="commentItemIn_{{unbound message_id}}">

            <div class="comment-position">
                <a class="profilepic-comment-container" href="#/users/{{unbound commenter_id}}" {{action linkingUser commenter_id}}>
                   <img class="profilepic_comment" {{bindAttr src="commenter_profile_pic_url"}} />
                </a>
                <div>
                    <div class="comment-namentime">
                        {{#if this.getUser}}
                        <span class="edit-comment easing">
                            <i class="fa fa-trash-o"  {{action removeComment this}}></i>                 
                            <i class="fa fa-pencil" {{action editingCommentData this}}></i>
                        </span>
                        {{/if}}
                        <a class="comment-username"  href="#/users/{{unbound commenter_id}}" {{action linkingUser commenter_id}}>
                           {{name}}    
                    </a>
                    <div class="posttime-container">
                        <span class="posttime">{{date  time_stamp}}</span>
                    </div>
                </div>

                <div class="comment-content">
                    {{content}} 
                </div>

            </div>
        </div>

    </div>
    <div id="commentEdit_{{unbound message_id}}" class="display-none">
        {{render editComment this}}       
    </div>
    {{/unless}}
    {{/each}}
</div>
</div>
    {{model.showMoreComment}}
{{#if model.isShowMoreComment}}
<div class="hover-opacity easing show-all-comment-box">  
    <div id="showMoreComment_{{unbound model.id}}" class="all-comment-show" {{action seeMore model.id target="controller" on="click"}}>
        <span class="all-comment-indicator-txt">show all comments &nbsp; {{model.comments.length}}</span>
        <i class="fa fa-caret-down show-comment_inner" ></i>   
    </div>
    <div id="closeComment_{{unbound model.id}}" class="all-comment-hide" {{action closeMore model.id  target="controller" on="click"}}>
        <span class="all-comment-indicator-txt">hide comments &nbsp; {{model.comment_count}}</span>
        <i class="fa fa-caret-up show-comment_inner" ></i>
    </div>
</div>
{{/if}}

{{#if controller.makeSureDelete}}

{{view HubStar.DeleteFunctionView}}

{{/if}}

{{isThumbUped model.people_like model.id}}

</div>
