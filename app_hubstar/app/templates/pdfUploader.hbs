        <div class="controlbtn-field" ></div>
        {{#each pdfArray}}
        <div  style="border: 3px dashed #ccc;margin: 10px;padding: 10px;">
        <div>
            <span style="font-weight: bold;display: inline-block;font-size: 25px; "{{action modifyDetail pdf_title}}>{{pdf_title}}</span> 
            <span><i class="fa fa-edit" style="font-size: 25px; margin-left: 400px;" {{action modifyDetail pdf_title}}></i></span> 
