


<div id="login_lightbox" class="blur_black" {{action cancelUpdateTag }}>&nbsp;</div>
<div  id ="tagit1">

    <div id ="savePhoto"class="t-style-box" style="z-index: 1002; position: relative;border-radius: 3px;">

        <div style="margin: 0 0 10px; position: relative; background-color: #f3f3f3; height: 45px;border-bottom: 1px solid #ddd;border-radius: 3px 3px 0 0;">
            <div style=' color: #555; font-size: 18px; font-weight: bold; text-align: center; line-height: 45px;'>{{controller.profile_name}}               
            </div>
            <div class="exit" style="float: right; position: relative; top: -46px;">
                <div class="closeview" {{action cancelUpdateTag }}>
                     <i class="fa fa-times"></i>
                </div> 
            </div>  
        </div> 

        <div class="contactmebox-wapper" style="width: 530px;height: 200px;font-size: 13px;margin: 0 20px;">
            <div style="display:inline-block; width:60%;">


                <div style="display:inline-block; ">
                    <div style=' color: #555; font-size: 18px; font-weight: bold; text-align: center; line-height: 45px;'>{{controller.selectedCollectionName}}               
            </div>                 
                </div>


                <div style=' font-size: 18px; font-weight: bold;'>    Product Name</div> 
                <div style="height: 15px;">
                    {{view Ember.TextArea valueBinding="controller.product_name" rows="1" cols="70" class="tag_currenprofile" placeholder="Say something about it!"}}
                </div>
                <br> 

                <div style=' font-size: 18px; font-weight: bold;'>       Write description:</div>
                <div style="height: 100px;">
                    {{view Ember.TextArea valueBinding="controller.description" rows="10" cols="70" class="tag_descriptionbox" placeholder="Write something to introduce the product!"}}
                </div>


            </div>

            <div style="display:inline-block;margin:30px 15px ; vertical-align: top;">
                <div style="width: 174px; height: 174px; overflow: hidden;padding: 10px;background-color: rgba(0,0,0,0.03);top: -4px;position: relative;">
                    <img style="height: 154px;width: 154px;" {{bindAttr src="controller.selectedPhotoThumbnailUrl" }}>
                </div>
            </div>


        </div>

        
        <div class="" style="height: 45px;position: relative;border-top: 1px solid #ddd;top: -1px;border-radius: 0 0 3px 3px;overflow: hidden;">
            <div  class="message-btn easing" style="height:45px;line-height: 45px; border-right: 1px solid #ddd;" {{action cancelUpdateTag }}><i class='fa fa-times'>&nbsp;</i>Cancel</div>
            <div class="message-btn easing" style='height:45px;line-height: 45px;'{{action saveUpdateTag controller.selectedPhotoThumbnailUrl}}><i class='fa fa-check'>&nbsp;</i>Update</div>
        </div>

    </div>

</div>
