<div class="navbar">
    <div style="position: absolute;right: 0;z-index: 1;">
        <img src="../../../images/beta-version.png"/>


        <span style="position: absolute; top: 21px; left: 33px; font-size: 12px;font-weight: bold;color: #f3f3f3;" id="lastidentifie">0.3-57</span>



    </div>
    <div class="navbar-inner">
        <div class="container">
            <div class="brand">
                <a href="/#">
                    <img class="logonew" style="position: relative; top: 0; margin:0;" src="../../../images/landing-trends.png">
                </a>
            </div>

            <!-- show if not logged into platform-->
            {{#if controller.islogin}}

            <div id="login_detail" style="position: absolute;right: 170px;cursor: pointer;vertical-align: top;display: inline-block;">
                {{view HubStar.AfterLoginView}}
            </div>


            {{else}}


            <div id="login_icon" style="position: absolute; right: 80px;">

                {{view HubStar.BeforeLoginView}}

                {{#if controller.popup}}


                {{view HubStar.LoginModalView}}


                {{/if}}

            </div>


            {{/if}}


            <!-- user is logged in -->

            <div class="Geo-Filter easing" style="margin-right: 80px;">
                <i class="icon-search icon-large"></i>
            </div>

            <div id="geo-filter" class="Geo-Filter easing " style="" {{action dropdownGlobal}}>
                 <i class="icon-globe icon-large">&nbsp;</i>
                <span style="font-weight: bold;font-size: 15px;">Global</span>
            </div>


            <ul class="hideClass edit-object-ul " id="dropdownGlobal_id_{{unbound id}}" style="width: 150px;  padding: 0;left: 130px;top: 50px;position: relative;float: right;">
                <li class="ite easing" style="">Global</li>
                <li class="ite easing" style="">Australia</li>
                <li class="ite easing" style="">New Zealand</li>
                <li class="ite easing" style="">United States</li>
                <li class="ite easing" style="">India</li>
                <li class="ite easing" style="">China</li>
                <li class="ite easing" style="">Asia</li>

            </ul>

        </div>
    </div>
</div>




<script type="text/javascript">

    $(document).ready(function() {
        // left hiding menu bar

        // hide #back-top first
        $("#back-top").hide();
        $(window).scroll(function() {

            if ($(this).scrollTop() > 150) {
                $('#back-top').fadeIn();
            } else {
                $('#back-top').fadeOut();
            }

        });
        $('#back-top a').click(function() {
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });
    });






    function setDomain() {

        var api_url = document.domain;
        var api_domain_start_pos = api_url.indexOf('.');
        var api_url = api_url.slice(api_domain_start_pos);

        return api_url;
    }




</script>
