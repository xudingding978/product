    {{/if}}
    {{/if}}

    <div style="position:relative; background-color: #f3f3f3; height: 25px; width:100%;margin-top: 10px;">
        <ul class="locationandlinks" style="font-size: 12px;height: 20px;margin: 2px auto;width: 100%;line-height: 10px;">
            <li><k class="icon-eye-open">&nbsp;</k>{{this.collections_size}}</li>
            <li class="location_li"><k class="icon-circle-blank">&nbsp;</k>{{this.follower_size}}</li>
        </ul>
    </div>

</div>

<script>
    $(function() {
        var $container = $('#masonry_user_container');
        window.setTimeout(function() {
            $container.masonry();
            $container.masonry('reload');
        }, 10);
    });
