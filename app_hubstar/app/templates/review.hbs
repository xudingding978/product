


<div class="blur_black"></div>


<div class="Add-review" style="">
    <div style="width: 100%;height: 50px; line-height: 52px;padding: 0 23px;">
        <a >
            <img class="profilepic_comment"  style="margin: 9px 15px 0 0;float: left;"{{bindAttr src="this.review_user_photo_url"}} /> 
        </a>
        <div style="font-size: 18px;font-weight: bold;color: #555;"><span>Review on</span><span>Profile name here please</span></div>
    </div>

    <div style="background-color: #f4f6f8; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; height: 50px; line-height: 50px; width: 100%">

        <span class="rating">
            <input type="radio" class="rating-input"
                   id="rating-input-1-5" name="rating-input-1">
            <label for="rating-input-1-5" class="rating-star"></label>
            <input type="radio" class="rating-input"
                   id="rating-input-1-4" name="rating-input-1">
            <label for="rating-input-1-4" class="rating-star"></label>
            <input type="radio" class="rating-input"
                   id="rating-input-1-3" name="rating-input-1">
            <label for="rating-input-1-3" class="rating-star"></label>
            <input type="radio" class="rating-input"
                   id="rating-input-1-2" name="rating-input-1">
            <label for="rating-input-1-2" class="rating-star"></label>
            <input type="radio" class="rating-input"
                   id="rating-input-1-1" name="rating-input-1">
            <label for="rating-input-1-1" class="rating-star"></label>
        </span>


        <span class="star-rating-control">

            <div role="text" aria-label="" class="star-rating star-rating-live " value="1">
                <a title="1">1</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="2">
                <a title="2">2</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="3">
                <a title="3">3</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="4">
                <a title="4">4</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="5">
                <a title="5">5</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="6">
                <a title="6">6</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="7">
                <a title="7">7</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="8">
                <a title="8">8</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="9">
                <a title="9">9</a>
            </div>
            <div role="text" aria-label="" class="star-rating  star-rating-live" value="10">
                <a title="10">10</a>
            </div>
            <div class="rating-cancel"><a title="Cancel Rating"></a></div>
        </span>

        <div class="new-btn blue-btn"{{action rateStar model.id}}>Rate {{controller.review_length}}</div>


    </div>

    <div style="margin: 5px auto; padding: 0 15px;height: 200px;">
        {{view Ember.TextArea  id="" valueBinding="review_content"  class="no-resize no-effect"  placeholder="review time" }}
    </div>

    <div class="" style="height: 41px;position: absolute;border-top: 1px solid #ddd;bottom: 0;width: 100%;">
        <div  class="message-btn easing"  {{action reviewCancel }}><k class="icon-remove">&nbsp;</k>Cancel</div>
        <div  class="message-btn easing" style="border-right: 1px solid #ddd;border-left: 1px solid #ddd;"><k class='icon-picture'>&nbsp;</k>Add Photo
            <div style="opacity:0;position: relative;height:30px;top:-35px;overflow: hidden;"> 
                {{view HubStar.SingleImageInputButtonView }}
            </div>
        </div>
        <div class="message-btn easing" {{action  reviewPost model.id}}><k class='icon-ok'>&nbsp;</k>Post</div>
    </div>


</div>


